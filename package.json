{
  "name": "easyrunes",
  "productName": "EasyRunes",
  "version": "1.0.3",
  "description": "Automate runes selection process for League of Legends",
  "main": "app/js/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win nsis portable",
    "watch:css": "postcss ./src/tailwind.css -o ./app/css/styles.css --watch --verbose"
  },
  "author": {
    "name": "Low Yiyiu",
    "url": "https://github.com/lowyiyiu"
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.3.7",
    "cssnano": "^5.0.8",
    "electron": "^15.2.0",
    "electron-builder": "^22.13.1",
    "postcss": "^8.3.9",
    "postcss-cli": "^9.0.1",
    "tailwindcss": "^2.2.17"
  },
  "dependencies": {
    "electron-json-storage": "^4.5.0",
    "electron-window-state": "^5.0.3",
    "freezer-js": "^0.14.1",
    "lcu-connector": "^2.1.3",
    "request": "^2.88.2",
    "ws": "^8.2.3"
  },
  "build": {
    "artifactName": "${productName}_${version}.${ext}",
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "portable"
      ]
    },
    "portable": {
      "artifactName": "${productName}_${version}_portable.${ext}"
    }
  }
}
